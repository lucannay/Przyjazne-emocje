<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0.5"
        android:background="@color/colorBackground"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:labelFor="@+id/step_name"
            android:text="@string/label1.1_save"
            android:textAppearance="@style/TitleStyle" />

        <EditText
            android:id="@+id/step_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/size"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/colorBackground"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/label1.2_save"
            android:textAppearance="@style/TitleStyle"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/trybNauki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/learnMode"
            android:textColor="#4C63E4"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LearnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textColor="#151414"
            android:textSize="16.5dp" />

        <TextView
            android:id="@+id/trybTestu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/testMode"
            android:textColor="#4C63E4"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TestInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textColor="#151414"
            android:textSize="16.5dp" />


    </LinearLayout>


</LinearLayout>