<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_center"
    tools:context="pg.autyzm.graprzyjazneemocje.EndActivity">
    <!--android:background="@drawable/background" jedna linijke wyzej-->

    <ImageView
        android:id="@+id/sun_image_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/sun" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rightAnswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/score" />

            <TextView
                android:id="@+id/rightAnswersNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#3F51B5"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wrongAnswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/score" />

            <TextView
                android:id="@+id/wrongAnswersNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#3F51B5"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/score" />

            <TextView
                android:id="@+id/timeOutsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#3F51B5"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/score" />

            <TextView
                android:id="@+id/statisticsNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#3F51B5"
                android:textStyle="bold"/>
        </LinearLayout>

<!--        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/previousStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/score" />

            <TextView
                android:id="@+id/previousStatisticsNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="brak danych" />
        </LinearLayout>-->

    </LinearLayout>

    <!--
    <ImageButton
       android:id="@+id/exitButton"
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="@null"
       android:scaleType="centerCrop"
       android:src="@drawable/icon_exit" />
       -->

    <TextView
        android:id="@+id/endTextMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:textColor="@color/command"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/prevButton"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:maxWidth="150dp"
        android:maxHeight="80dp"
        android:minWidth="150dp"
        android:minHeight="80dp"
        android:onClick="repeatLevel"
        android:textColor="#FFFDFD"
        android:textColorHint="#FBF9F9" />

    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:maxWidth="150dp"
        android:maxHeight="80dp"
        android:minWidth="150dp"
        android:minHeight="80dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#FBF9F9" />

</RelativeLayout>
