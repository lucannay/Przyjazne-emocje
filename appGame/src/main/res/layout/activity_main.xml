<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relativeLayout"
    android:background="@color/background_center"
    tools:context="pg.autyzm.graprzyjazneemocje.MainActivity">
    <!--android:background="@drawable/background" jedna linijke wyzej-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rightEmotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_marginRight="-2dp"
            android:layout_toLeftOf="@+id/matchEmotionsSpeakerButton"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:textColor="@color/command"
            android:textSize="50dp" />

        <ImageButton
            android:id="@+id/matchEmotionsSpeakerButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:background="@null"
            android:clickable="true"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_speaker" />

        <TextView
            android:id="@+id/timeToAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rightEmotion"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:text="" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/imageGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageGallery"
        android:layout_alignBottom="@id/imageGallery"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:baselineAligned="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberOfTries2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberOfTries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/saveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="BRAWO"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:visibility="invisible" />

</RelativeLayout>
