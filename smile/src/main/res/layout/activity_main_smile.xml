<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_screen"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/title_icon" />

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/start_icon" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollHorizontally="false"
            android:text="Poziom nagradzanej radości"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

        <NumberPicker
            android:id="@+id/happinessNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:scaleX="0.65"
            android:scaleY="0.65" />

        <TextView
            android:id="@+id/checkboxLabel"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:scrollHorizontally="false"
            android:text="Poziom wyświetlany na ekranie"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/levelCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/checkboxFrameLabel"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:scrollHorizontally="false"
            android:text="Ramka wyświetlana na ekranie"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/frameCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/logo_icon" />

</LinearLayout>

